{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "noUncheckedIndexedAccess": true,
        "tsBuildInfoFile": ".tsbuildinfo"
    },
    "exclude": ["node_modules"]
}
