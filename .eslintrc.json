{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [
            "warn",
            4
        ],
        "quotes": [
            "warn",
            "double"
        ],
        "semi": [
            "warn",
            "always"
        ],
        "prefer-const": [
            "warn"
        ],
        "no-multiple-empty-lines": [
            "warn",
            {"max": 2, "maxBOF": 0, "maxEOF": 1}
        ],
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": ["off"]
    }
}
